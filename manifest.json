{
  "manifest_version":2,
  "name":"NHL Scores",
  "short_name":"NHLscores",
  "description":"follow your fav team with live scores",
  "version":"0.2",

  "permissions":[
    "alarms",
    "tabs",
    "webNavigation",
    "http://live.nhle.com/GameData/RegularSeasonScoreboardv3.jsonp"
  ],

  "homepage_url":"http://somethingGoesHere.com",
  "browser_action":{
    "default_title":"NHL Scores",
    "default_popup":"popup.html"
  },
  "background":{
    "scripts":["js/jquery.js", "js/background.js"],
    "presistent":false
  }
}
